@model IEnumerable<PizzeriaEpicode.Models.Order>
@{
    ViewBag.Title = "MyOrders";
}

<h2>MyOrders</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Shipping Address</th>
                <th>Notes</th>
                <th>Status</th>
                <th>Date and Time</th>
                <th>Order Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.ShippingAddress</td>
                    <td>@order.Notes</td>
                    <td>@order.Status</td>
                    <td>@order.DateTime</td>
                    <td>
                        @Html.ActionLink("Details", "Summary", "Orders", new { id = order.Id }, new { @class = "btn btn-success" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no orders.</p>
}

