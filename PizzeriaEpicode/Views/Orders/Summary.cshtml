@model PizzeriaEpicode.Models.OrderSummaryViewModel

@{ 
    ViewBag.Title = "Order Sumamry";
}

<h2>Order Summary for Order #@Model.OrderId</h2>

<p><strong>Shipping Address:</strong>@Model.ShippingAddress</p>
<p><strong>Notes:</strong>@Model.Notes</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.ProductName</td>
                    <td>@detail.PriceAtTheTimeOfOrder</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.TotalePrice</td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total Order Price</th>
            <th>@Model.TotalOrderPrice</th>
        </tr>
    </tfoot>
</table>