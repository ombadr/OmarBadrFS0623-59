@model PizzeriaEpicode.Models.User
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new  {@class="form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PasswordHash, "Password")
        @Html.TextBoxFor(m => m.PasswordHash, new {@class = "form-control", type="password"})
    </div>

    <div class="checkbox">
         <label>
             @Html.CheckBox("keepLogged", false)
             Keep me logged in
         </label>
    </div>

    <button type="submit" class="btn btn-danger my-3">Login</button>
}

